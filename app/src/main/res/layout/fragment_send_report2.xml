<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    tools:context="com.example.asus.project.pages.SendReport2Fragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="15dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ชื่อผู้พบปัญหา"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/problem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="16dp"
           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ประเภท"
            android:textSize="16dp"/>
        <Spinner
            android:id="@+id/Sch_Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ระดับความสำคัญ"
            android:textSize="16dp"/>
        <Spinner
            android:id="@+id/Sch_Priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ช่องทางการติดต่อ"
            android:textSize="16dp"/>
        <Spinner
            android:id="@+id/Sch_Contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>




    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:layout_weight="1"
        android:id="@+id/prev_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorprv"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/prev"
        android:textColor="#ffffff"
        android:textSize="15sp" />


    <Button
        android:layout_weight="1"
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/next"
        android:textColor="#ffffff"
        android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
