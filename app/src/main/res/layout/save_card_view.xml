<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/txt_save_request_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text="loading..."/>
                <TextView
                    android:id="@+id/txt_save_request_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:layout_below="@+id/txt_save_request_date"
                    android:text="loading..."/>
                <TextView
                    android:id="@+id/txt_save_request_system"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:layout_below="@+id/txt_save_request_site"
                    android:text="loading..."/>

                <Button
                    android:id="@+id/btn_save_request_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="แก้ไข"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:background="#FFD700"/>


            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
