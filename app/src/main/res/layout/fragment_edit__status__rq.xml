<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_quest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="รับเรื่อง"
                />
            <RadioButton
                android:id="@+id/radio_analysis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="วิเคราะห์ผลกระทบ/ออกแบบ"
                />
            <RadioButton
                android:id="@+id/radio_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ดำเนินการพัฒนาา/ปรับแก้ไข"
                />
            <RadioButton
                android:id="@+id/radio_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ทดสอบความถูกต้อง"
                />
            <RadioButton
                android:id="@+id/radio_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="รายงานผล"
               />
            <RadioButton
                android:id="@+id/radio_done"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="สำเร็จ"
                />

            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_save_edit_rq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"
                android:background="#5ed76c"
                android:text="บันทึก"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>


</RelativeLayout>