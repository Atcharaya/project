<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.project.pages.FristFragment">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <!-- line 1 -->
        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="330dp"
                android:layout_height="220dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"/>
                        <!--android:background="@drawable/blue"/>-->
                    <TextView
                        android:id="@+id/txtbar"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="ภาพรวมของการดำเนินงานประจำปีงบประมาณ 2560"
                        android:textColor="#ffff"
                        android:textSize="15dp"
                        android:padding="2dp"
                        android:gravity="center"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:layout_width="400sp"
                        android:layout_height="350sp"
                        android:id="@+id/piechart"
                        android:layout_below="@+id/txtbar">

                    </com.github.mikephil.charting.charts.PieChart>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <!-- line 2 -->
        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="ความสำคัญระดับเร่งด่วน"/>
                    <!--<ImageView-->
                        <!--android:id="@+id/tune"-->
                        <!--android:padding="8dp"-->
                        <!--android:layout_width="64dp"-->
                        <!--android:layout_height="64dp"-->
                        <!--&lt;!&ndash;android:src="@drawable/ic_tune_black_24dp"&ndash;&gt;-->
                        <!--android:layout_below="@+id/txt1"/>-->

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="ความสำคัญระดับมาก"/>

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/txt3"
                        android:layout_toRightOf="@+id/tune2"
                        android:text="8"
                        android:gravity="center"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/txt4"
                        android:layout_toRightOf="@+id/tune2"
                        android:text="5.00%"
                        android:gravity="center"
                        android:textSize="15dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <!-- line 3 -->
        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        </LinearLayout>


    </LinearLayout>

</FrameLayout>
